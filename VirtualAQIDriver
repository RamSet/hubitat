import java.text.DecimalFormat

metadata {
	definition (name: "Virtual AQI Driver", namespace: "RamSet", author: "RamSet") {
	capability "Temperature Measurement"
	capability "Relative Humidity Measurement"
	attribute "AQI", "number"
	command "airQualityIndex", ["Number"]
	}
def airQualityIndex() {
    def descriptionText = "${airQualityIndex} AQI"
    if (txtEnable) log.info "${descriptionText}"
    sendEvent(name: "AQI", value: "AQI",descriptionText: descriptionText)
}
}
